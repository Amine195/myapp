<style>
    body {
        background: url('/MyImg/background.jpg') no-repeat fixed center;
        background-size: cover;
    }
</style>

<% layout('layout') %>

<% include ../navbar/navbar %>

<div class="users">
    <div class="container">
        <h1><i class="fa fa-sign-in" aria-hidden="true"></i> LOGIN</h1>
        <hr>

        <% if(hasErrors) { %>
            <% for(var i = 0; i < messages.length; i++ ) { %>
                <h5
                style="color:#f44336;
                text-align:center;">
                <i class="fa fa-exclamation-triangle" aria-hidden="true">
                </i>&nbsp;&nbsp;&nbsp;&nbsp; <%= messages[i] %></h5>
            <% } %> 
        <% } %>

        <% if(noErrors) { %>
            <h5 style="color: #4caf50;
            text-align:center;">
            <i class="fa fa-check" aria-hidden="true">
            </i>&nbsp;&nbsp;&nbsp;&nbsp; <%= success %></h5>
        <% } %>

        <form action="/login" method="post">
            
            <label for="email">Email address</label>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                    <input type="email" name="email" class="form-control" placeholder="Enter Email">
                </div>
            </div>

            <label for="password">Password</label>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                    <input type="password" name="password" class="form-control" placeholder="Enter Password">
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <div class="checkbox pull-right">
                    <label for="rememberme">
                        <input type="checkbox" name="rememberme" value="yes"> Remember Me
                    </label>
                </div>
            </div>

        </form>

        <div>
            <h5 class="pull-left">Don't have an account ? <a href="/register">Sign Up</a></h5>
            <h5 class="pull-right"><a href="/forgot">Forgot Your Password?</a></h5>
        </div>
    </div>
</div>